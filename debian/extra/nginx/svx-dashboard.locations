 Data z RAM
location /svx/data/ {
  alias /run/svx-dashboard/;
  add_header Cache-Control "no-store";
  try_files $uri =404;
}

# Statika
location /svx/ {
  alias /usr/share/svx-dashboard/html/;
  autoindex off;
  try_files $uri =404;
}

# SSE
location /sse {
  proxy_http_version 1.1;
  proxy_set_header Connection "";
  proxy_buffering off;
  chunked_transfer_encoding off;
  proxy_read_timeout 3600s;
  proxy_send_timeout 3600s;
  proxy_pass http://127.0.0.1:8090/sse;
}
